<UserControl
    x:Class="HotelManagement.Views.UserControl1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewModels="clr-namespace:HotelManagement.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="#007777"
    FontFamily="/Resources/GothamLight.otf#Gotham Light"
    FontSize="15"
    mc:Ignorable="d">




    <Grid MaxWidth="1000" Margin="20 10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <Image Source="../Resources/hotelIcon.ico" Width="30" Height="30" Margin="5" />

        <TextBlock
     Grid.Column="1"
     FontSize="16"
     Foreground="White"
     Text="Hotel Management"
     VerticalAlignment="Center" />


        <ListBox Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center"
        x:Name="RadioButtonGroupChoiceChip"
        Style="{StaticResource MaterialDesignChoiceChipListBox}"
>
            <ListBoxItem
            Content="Guests" 
            IsSelected="True"
            />
            <ListBoxItem
            Content="Reservations"/>
            <ListBoxItem
            Content="Services" />
            <ListBoxItem
            Content="Invoices"/>
        </ListBox>

        <Button
     Grid.Column="7"
     Margin="10" 
     Width="25" Height="25"
     Background="Transparent"
     Style="{StaticResource MaterialDesignFlatButton}"
     Padding="0"
     VerticalAlignment="Center">
            <materialDesign:PackIcon Kind="Logout" Width="24" Height="24" Foreground="White" />
        </Button>
    </Grid>
</UserControl>